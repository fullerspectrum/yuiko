{
  "name": "yuiko",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Clévio Orlando",
    "email": "cleviojr20@gmail.com"
  },
  "dependencies": {
    "apollo-boost": "^0.4.4",
    "apollo-client": "^2.6.4",
    "cross-env": "^6.0.3",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^5.1.0",
    "graphql": "^14.5.8",
    "graphql.macro": "^1.4.2",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "query-string": "^6.13.2",
    "react": "^16.11.0",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.11.0",
    "react-helmet": "^6.1.0",
    "react-redux": "^7.1.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.1",
    "redux": "^4.0.4",
    "webpack": "4.42.0"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "run-no-gpu": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron --args --disable-gpu .\"",
    "run-any": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "run-WSL": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron --args --disable-gpu --no-sandbox --disable-features=VizDisplayCompositor .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder build -wl"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "babel-eslint": "^10.1.0",
    "babel-literal-to-ast": "^2.1.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.0.0",
    "core-js": "^3.5.0",
    "electron": "^10.1.2",
    "electron-builder": "^21.2.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "node-sass": "^4.13.1",
    "prettier": "^2.1.2",
    "tslint": "^5.20.1",
    "tslint-loader": "^3.5.4",
    "typescript": "^4.0.3",
    "wait-on": "^3.3.0"
  },
  "build": {
    "appId": "moe.yuiko.desktop",
    "productName": "Yuiko",
    "copyright": "Copyright © 2019-2020 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
